@using FancyFix.OA.Model;
@using FancyFix.Tools.Json;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Questionnaire_Subject> list = ViewBag.list;
}
@section Css{
    <style>
        .box {
            box-shadow: none;
        }
    </style>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box-header" style="text-align:center;">
            <h3 class="box-title">米纳问卷列表</h3>
        </div>
        <div class="box">
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="text-align:center;">问卷标题</th>
                            <th style="text-align:center;">总分值</th>
                            <th style="text-align:center;">时间限制</th>
                            <th style="text-align:center;">操作</th>
                        </tr>
                        @if (list != null && list.Count > 0)
                        {
                            foreach (var item in list)
                            {
                                <tr>
                                    <td align="center">@item.Title 月</td>
                                    <td align="center">@item.Score</td>
                                    <td align="center">@(item.Timelimit / 60)分钟</td>
                                    <td align="center">
                                        <a href="/test/info/@item.Id" class="btn btn-warning">进入</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td align="center" colspan="4">暂无数据</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Js{
    <script src="/Content/js/plugins/jqvalidate/jquery.validator.min.js"></script>
    <script src="/Content/js/plugins/jqvalidate/messages_cn.js"></script>
    <script src="/Content/js/common/tools.js"></script>
    <script>
        layui.use(['layer'], function () {
            var layer = layui.layer;
        })
    </script>
}