@using FancyFix.OA.Model;
@model Kpi_Records
@{
    ViewBag.Title = "SelfApprove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css{
    <link href="/Content/js/plugins/iCheck/flat/_all.css" rel="stylesheet" />
    <link href="/Content/js/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <style>
        .form-group {
            margin-bottom: 0;
        }
    </style>
}
<div class="row">
    <div class="col-md-12">
        <form id="mainform" action="/kpi/kpi/selfapprovesave" method="post">
            <table class="layui-table">
                <!--列宽度-->
                <colgroup>
                    <col class="col-lg-2 col-xs-3">
                    <col class="col-lg-10 col-xs-9">
                </colgroup>
                <tbody>
                    <tr>
                        <td align="right"><label for="year" class="control-label">进程：</label></td>
                        <td>
                            @Model.Year 年 @Model.Month 月
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><label for="name" class="control-label">指标：</label></td>
                        <td>
                            @Model.Name
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><label for="content" class="control-label">定义：</label></td>
                        <td>
                            @Model.Content
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><label for="score" class="control-label">权重：</label></td>
                        <td>
                            @Model.Score %
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><label for="scoreremark" class="control-label">标准：</label></td>
                        <td>
                            @Model.TargetRemark
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><label for="scoreremark" class="control-label">自评分：</label></td>
                        <td>
                            <div class="form-group form-inline">
                                <input type="text" class="form-control" id="selfscore" name="selfscore" value="@Model.SelfScore" required="required" maxlength="50" style="width:60px;" integer="true" max="120" min="0">
                                <span class="layui-word-aux"> （可打0-120分）</span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><label for="scoreremark" class="control-label">备注：</label></td>
                        <td>
                            <textarea class="form-control" id="selfremark" name="selfremark" maxlength="2000">@Model.SelfRemark</textarea>
                        </td>
                    </tr>
                    <tr>
                        <td align="right"></td>
                        <td>
                            <input type="hidden" id="id" name="id" value="@Model.Id">
                            <button type="submit" id="btnPass" class="btn btn-primary">提交</button>
                            <a href="/kpi/kpi/kpilist?year=@Model.Year&month=@Model.Month" id="cancel" class="btn btn-default">返回</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
@section Js{
    <script src="/Content/js/plugins/iCheck/icheck.min.js"></script>
    <script src="/Content/js/plugins/jqvalidate/jquery.validator.min.js"></script>
    <script src="/Content/js/plugins/jqvalidate/messages_cn.js"></script>
    <script src="/Content/js/common/tools.js"></script>
    <script>
        layui.use(['layer'], function () {
            var layer = layui.layer;

            //iCheck初始化
            $('input[type="checkbox"],input[type="radio"]').iCheck({
                checkboxClass: 'icheckbox_flat-blue',
                radioClass: 'iradio_flat-blue'
            });

            //表单验证
            var $form = $("#mainform");
            $form.validate();

            //通过
            $("#btnPass").click(function () {
                $form.valid();
            });
        })
    </script>
}

