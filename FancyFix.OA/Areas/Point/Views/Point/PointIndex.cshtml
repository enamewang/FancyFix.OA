@using FancyFix.OA.Model
@{
    ViewBag.Title = "PointList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Point_Records> recordlist = ViewBag.recordlist;
    int childCount = ViewBag.childCount;
}
@section Css{
    <link href="/Content/js/plugins/datatables/bootstrap-table.min.css" rel="stylesheet" />
    <style>
        .callout a {
            text-decoration: none;
            width: 150px;
        }
    </style>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box-header">
            <h3 class="box-title">积分模块：</h3>
        </div>
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-body">
                            <div class="callout callout-danger center-block">
                                <a href="/point/point/pointchoose">
                                    <h4>申请新积分项</h4>
                                    <p>申请一个新的积分项</p>
                                </a>
                            </div>
                            <div class="callout callout-success">
                                <a href="/point/point/pointlist">
                                    <h4>查看历史申请</h4>
                                    <p>查看您的所有历史申请记录</p>
                                </a>
                            </div>
                            @if (IsDepartAdmin || IsSuperAdmin || childCount > 0)
                            {
                                <div class="callout callout-warning">
                                    <a href="/point/point/childuserlist">
                                        <h4>评审下级申请项</h4>
                                        <p>评审下级员工提交的积分申请</p>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Js{
    <script src="/Content/js/common/tools.js"></script>
    <script type="text/javascript">
        layui.use(['layer'], function () {
            var layer = layui.layer;
        })
    </script>
}
